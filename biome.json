{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useLiteralKeys": "off",
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 25
          }
        }
      },
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedImports": "error"
      },
      "nursery": {
        "noProcessEnv": "error",
        "noStaticElementInteractions": "error",
        "noTemplateCurlyInString": "error",
        "useAtIndex": "error",
        "useValidAutocomplete": "error"
      },
      "performance": {
        "noReExportAll": "error"
      },
      "style": {
        "noDefaultExport": "error",
        "noYodaExpression": "error",
        "useDefaultSwitchClause": "error",
        "useFragmentSyntax": "error",
        "useNodeAssertStrict": "error",
        "useImportType": "off"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    }
  },
  "overrides": [
    {
      "include": ["*.spec.ts", "*.e2e-spec.ts"],
      "javascript": {
        "globals": ["it", "describe", "expect", "beforeEach", "afterEach", "beforeAll", "afterAll", "test"]
      }
    }
  ]
}
